{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Proton Drive",
  "version": "1.2.1",
  "identifier": "com.proton.drive",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../WebClients/applications/drive/dist"
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "ProtonMail AG",
    "category": "Productivity",
    "shortDescription": "Encrypted cloud storage",
    "longDescription": "Proton Drive is encrypted cloud storage that protects your files with end-to-end encryption.",
    "license": "AGPL-3.0",
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0", "libayatana-appindicator3-1"]
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "app": {
    "security": {
      "csp": null
    },
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Proton Drive",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
