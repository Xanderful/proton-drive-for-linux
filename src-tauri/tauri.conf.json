{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "proton-drive",
  "version": "1.1.0",
  "identifier": "com.proton.drive",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../dist-dummy"
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/proton-drive.svg"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "DonnieDice",
    "category": "Network",
    "shortDescription": "Encrypted cloud storage",
    "longDescription": "Proton Drive is encrypted cloud storage that protects your files with end-to-end encryption.",
    "license": "AGPL-3.0",
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0", "libayatana-appindicator3-1"],
        "desktopTemplate": "linux/proton-drive.desktop"
      },
      "rpm": {
        "depends": ["webkit2gtk4.1", "gtk3", "libayatana-appindicator-gtk3"],
        "desktopTemplate": "linux/proton-drive.desktop"
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "app": {
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "drive.proton.me",
          "windows": ["main"],
          "enableTauriAPI": false
        }
      ]
    },
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "Proton Drive",
        "url": "https://drive.proton.me",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "userAgent": "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}